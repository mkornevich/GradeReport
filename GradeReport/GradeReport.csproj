<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <StartupObject>GradeReport.Program</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Core\Filtration\" />
    <Folder Include="Core\Selection\" />
    <Folder Include="Core\SQLBuilder\" />
    <Folder Include="Core\TypeList\" />
    <Folder Include="Core\Type\" />
    <Folder Include="Core\Validation\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="5.0.6" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="5.0.6">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Modules\Group\GroupEditForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Modules\Group\GroupEditForm.Designer.cs">
      <DependentUpon>GroupEditForm.cs</DependentUpon>
    </Compile>
    <Compile Update="Modules\Group\GroupListForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Modules\Group\GroupListForm.Designer.cs">
      <DependentUpon>GroupListForm.cs</DependentUpon>
    </Compile>
    <Compile Update="Modules\Main\MainForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Modules\Main\MainForm.Designer.cs">
      <DependentUpon>MainForm.cs</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Modules\Main\MainForm.resx">
      <DependentUpon>MainForm.cs</DependentUpon>
    </EmbeddedResource>
  </ItemGroup>

</Project>